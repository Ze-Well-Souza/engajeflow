# Variáveis de ambiente para TechCare Connect Automator (AMBIENTE DE TESTE)

# Credenciais do TechCare (valores fictícios para testes)
TECHCARE_USER=teste@techcare.com
TECHCARE_PASS=senha_teste_123
TECHCARE_BASE_URL=https://app.techcare.com

# Configurações de operação
NODE_ENV=development
OPERATION_MODE=dashboard
MAX_CONCURRENCY=2
LOG_LEVEL=debug

# Configurações de logs
LOG_DIR=logs
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
LOG_CONSOLE=true

# Configurações de Redis (mock para testes)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=teste_redis_pass
REDIS_PREFIX=techcare_test:

# Configurações de API
API_PORT=3000
API_SECRET=jwt_secret_token_para_testes
API_RATE_LIMIT=100

# Configurações de OpenAI (chave fictícia para testes)
OPENAI_API_KEY=sk-test_key_openai_12345

# Configurações de Puppeteer
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_HEADLESS=true

# Configurações de e-mail (valores fictícios para testes)
SMTP_HOST=smtp.teste.com
SMTP_PORT=587
SMTP_USER=teste@exemplo.com
SMTP_PASS=senha_teste_smtp
SMTP_FROM=TechCare Automator <teste@exemplo.com>

# Configurações de Timezone
TZ=America/Sao_Paulo

# Configurações de monitoramento
ENABLE_METRICS=true
METRICS_PORT=9090
