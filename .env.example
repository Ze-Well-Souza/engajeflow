# Variáveis de ambiente para TechCare Connect Automator

# Credenciais do TechCare (obrigatórias)
TECHCARE_USER=seu_usuario@exemplo.com
TECHCARE_PASS=sua_senha_segura
TECHCARE_BASE_URL=https://app.techcare.com

# Configurações de operação
NODE_ENV=production
OPERATION_MODE=dashboard  # Opções: dashboard, automator, scheduler
MAX_CONCURRENCY=3
LOG_LEVEL=info  # Opções: debug, info, warn, error

# Configurações de logs
LOG_DIR=logs  # Diretório onde os logs serão armazenados
LOG_FORMAT=json  # Formato dos logs: json ou text
LOG_MAX_SIZE=10m  # Tamanho máximo de cada arquivo de log
LOG_MAX_FILES=7  # Número máximo de arquivos de log para retenção
LOG_CONSOLE=true  # Se deve exibir logs no console em desenvolvimento

# Configurações de Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=techcare_redis_pass
REDIS_PREFIX=techcare:

# Configurações de API
API_PORT=3000
API_SECRET=seu_token_secreto_para_jwt
API_RATE_LIMIT=100  # Requisições por minuto

# Configurações de OpenAI (opcional, para recursos de IA)
OPENAI_API_KEY=sk-sua_chave_api_openai

# Configurações de Puppeteer
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_HEADLESS=true

# Configurações de e-mail (opcional, para notificações)
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=notificacoes@exemplo.com
SMTP_PASS=senha_smtp
SMTP_FROM=TechCare Automator <notificacoes@exemplo.com>

# Configurações de Timezone
TZ=America/Sao_Paulo

# Configurações de monitoramento (opcional)
ENABLE_METRICS=true
METRICS_PORT=9090
